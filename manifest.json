{

  "manifest_version": 2,
  "name": "PGP Universal",
  "description": "Fixes encrypted e-mail attachment names from PGP Universal servers",
  "author": "Konrad Gr√§fe <kgraefe@paktolos.net>",
  "version": "1.2",

  "applications": {
    "gecko": {
      "id": "tb-pgp-universal@paktolos.net",
      "strict_min_version": "91.0",
      "strict_max_version": "102.*"
    }
  },

  "permissions": [
    "messagesRead",
    "downloads",
    "downloads.open"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "experiment_apis": {
    "pgpuniversal": {
      "schema": "pgpuniversal.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["pgpuniversal"]],
        "script": "pgpuniversal.js"
      }
    }
  }
}
