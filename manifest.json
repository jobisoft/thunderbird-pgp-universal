{

  "manifest_version": 2,
  "name": "PGP Universal",
  "description": "Fixes encrypted e-mail attachment names from PGP Universal servers",
  "author": "Konrad Gr√§fe <kgraefe@paktolos.net>",
  "version": "0.1",

  "applications": {
    "gecko": {
      "id": "pgp-universal-fixes@paktolos.net",
      "strict_min_version": "91.0",
      "strict_max_version": "91.*"
    }
  },

  "permissions": [
    "messagesRead",
    "downloads",
    "downloads.open"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "experiment_apis": {
    "renameattachments": {
      "schema": "renameattachments.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["renameattachments"]],
        "script": "renameattachments.js"
      }
    }
  }
}
